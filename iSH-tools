def install_all():
    tools_dir = os.path.join(HOME, 'tools')
    subprocess.run(['bash', 'all.sh'], cwd=tools_dir, check=True)
    for i in range(1, 15):
        install_true(str(i))
    input(Colors.green + " >>> ")
    main()

